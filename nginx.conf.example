# Nginx configuration for GhostCrate reverse proxy
# Place this in your nginx sites-available directory

server {
    listen 80;
    server_name crates.cktechx.com crates.cktechnology.io crates.cktechx.io;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name crates.cktechx.com crates.cktechnology.io crates.cktechx.io;

    # SSL configuration - Update paths to your certificates
    # For Let's Encrypt certificates:
    ssl_certificate /etc/letsencrypt/live/crates.cktechx.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/crates.cktechx.com/privkey.pem;

    # Include Let's Encrypt recommended settings
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Modern SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # Client max body size for crate uploads
    client_max_body_size 50M;

    # Proxy settings
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Port $server_port;

    # Timeouts
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;

    # Main location
    location / {
        proxy_pass http://127.0.0.1:8080;

        # Handle WebSocket upgrades for hot reload (development)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Health check endpoint
    location /health {
        proxy_pass http://127.0.0.1:8080/health;
        access_log off;
    }

    # API endpoints with longer timeouts for uploads
    location /api/ {
        proxy_pass http://127.0.0.1:8080/api/;
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }

    # Static assets with caching
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        proxy_pass http://127.0.0.1:8080;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Logging
    access_log /var/log/nginx/ghostcrate_access.log;
    error_log /var/log/nginx/ghostcrate_error.log;
}